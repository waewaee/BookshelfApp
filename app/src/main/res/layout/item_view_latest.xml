<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_link_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="12dp"
        android:src="@drawable/ic_link_to" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_link_to"
        android:background="@color/primary_light">

        <TextView
            android:id="@+id/tv_title_latest_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Harry Potter and the Goblet of Fire"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_desc_latest_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title_latest_book"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc tincidunt ante non purus condimentum, eget semper erat elementum. In hac habitasse platea dictumst. Vivamus tristique at nulla quis ultricies. Suspendisse quis diam ut tortor porttitor congue non vitae nunc. Phasellus fringilla eget metus ut pellentesque. Cras vulputate, nibh accumsan lacinia feugiat, mauris est tincidunt odio, sit amet viverra lectus nunc in ipsum. Nunc aliquam turpis ac sem rutrum, non fringilla sem consequat."
            android:textSize="12dp"
            android:fontFamily="sans-serif-condensed-light"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="3" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:src="@drawable/harry_potter_portrait"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Reader Count ; 48 Sender Count : 48" />

</RelativeLayout>